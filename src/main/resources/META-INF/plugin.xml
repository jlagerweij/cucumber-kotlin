<idea-plugin>
    <id>net.lagerwey.cucumber-kotlin</id>
    <name>Cucumber for Kotlin</name>
    <version>1.0.1</version>
    <vendor url="http://www.github.com/jlagerweij">
        Jos Lagerweij
    </vendor>

    <description><![CDATA[
      <p>
        This plugin enables <a href="http://cukes.info/">Cucumber</a> support with step definitions written in Kotlin.
      </p>
      <p>
        The following coding assistance features are available:
      </p>
      <ul>
        <li>Navigation in the source code.
      </ul>
    ]]></description>

    <change-notes><![CDATA[
      <ul>
        <li><b>1.0.1</b> <em>(2018-03-14)</em> - Support regex shorthand character classes</li>
        <li><b>1.0.0</b> <em>(2018-03-13)</em> - Initial release</li>
      </ul>
    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="162"/>

    <depends>com.intellij.modules.lang</depends>
    <depends>gherkin</depends>
    <depends>org.jetbrains.kotlin</depends>

    <extensions defaultExtensionNs="org.jetbrains.plugins.cucumber.steps">
        <cucumberJvmExtensionPoint implementation="net.lagerwey.plugins.cucumber.kotlin.KotlinCucumberExtension"/>
    </extensions>

</idea-plugin>